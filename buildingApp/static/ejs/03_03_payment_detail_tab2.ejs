<table class="table table-bordered table-condensed" style="margin-bottom:0px">
	<tr>
		<th rowspan="2" style="text-align:center">선택</th>
		<th rowspan="2" style="text-align:center">년도/월</th>
		<th rowspan="2" style="text-align:center">고지회차</th>
		<th rowspan="2" style="text-align:center">합계금액</th>
		<th rowspan="2" style="text-align:center">납부예정일</th>
		<th rowspan="2" style="text-align:center">납부입금일</th>
		<th colspan="3" style="text-align:center">미납 처리 사항</th>
		<th rowspan="2" colspan="2" style="text-align:center">연체내역</th>
		<th rowspan="2" colspan="2" style="text-align:center">추가납부</th>
		<th rowspan="2" style="text-align:center">납부결과</th>
		<th colspan="3" style="text-align:center">납부 내역 수정</th>
	</tr>
	<tr>
		<th style="text-align:center">입금액</th>
		<th style="text-align:center">미납액</th>
		<th style="text-align:center">처리일자</th>
		<th colspan="2" style="text-align:center">회차</th>
		<th style="text-align:center">보기</th>
	</tr>
	<% for (i = 0; i < data.length; i++) { %>
	<tr id="sel<%= i %>">
		<% if ((radio == 2 && !data[i].checked) || (radio == 3 && data[i].checked)) { %>
		<% continue; %>
		<% } %>
		<% if (radio == 1) { %>
		<td style="text-align:center"><input id="selCheck<%= i %>" type="checkbox" name="dataCheck" /></td>
		<% } else { %>
		<td style="text-align:center"><input type="checkbox" name="dataCheck" disabled /></td>
		<% } %>
		<td style="text-align:center"><%= data[i].year %>.<%= data[i].month %></td>
		<td style="text-align:center"><%= data[i].number %></td>
		<td style="text-align:center"><%= data[i].totalFee %></td>
		<td style="text-align:center"><font style="color:blue"><%= data[i].year %>.<%= data[i].month %>.<%= data[i].leasePayDate %></font></td>
		<td style="text-align:center"><font style="color:red"><%= data[i].payDate %></font></td>
		<td style="text-align:center"><%= data[i].amountPay %></td>
		<td style="text-align:center"><font style="color:red"><%= data[i].amountNoPay %></font></td>
		<td style="text-align:center"><%= data[i].confirmDate %></td>
		<td style="text-align:center">미납</td>
		<td style="text-align:center"><%= data[i].delayNumberNow %>회</td>
		<td style="text-align:center"><% if (data[i].payStatus == -1) { %>완납<% } else { %>납부<% } %></td>
		<td style="text-align:center"><% if (data[i].payStatus == -1) { %>없음<% } else { %><%= data[i].payStatus %>회<% } %></td>
		<td style="text-align:center"><% if (data[i].payStatus == -1) { %>납부(완납)<% } else if (data[i].payStatus == 0) { %>미납<% } else { %>부분 납부<% } %></td>
		<td style="text-align:center">수정</td>
		<td style="text-align:center"><%= data[i].modifyNumber %>회</td>
		<td style="text-align:center"><button type="btn btn-mini" onclick="showModifyInfo('<%= data[i].id %>');">확인</button></td>
	</tr>
	<% } %>
</table>
