<% if (type == 'payment') { %>
<% var num = 1; %>
<table id="payment_table" class="table table-bordered table-condensed" style="margin-bottom:0px">
	<tr>
		<th style="text-align:center" width="5%">No.</th>
		<th style="text-align:center" width="8%">항목</th>
		<th style="text-align:center" width="10%">추가 납부</th>
		<th style="text-align:center" width="67%">내용</th>
		<th style="text-align:center" width="10%">시간</th>
	</tr>
	<% for (i = 0; i < data.length; i++) { %>
	<% if (data[i].payStatus == 0) { continue; } %>
	<tr>
		<td style="text-align:center"><%= num %></td>
		<td style="text-align:center">미납 <%= data[i].delayNumber %>회</td>
		<td style="text-align:center"><% if (data[i].payStatus == -1) { %>완납<% } else { %><%= data[i].payStatus %>회 납부<% } %></td>
		<td style="text-align:center"><%= data[i].payMsg %></td>
		<td style="text-align:center"><%= data[i].confirmDate %></td>
	</tr>
	<% num += 1; %>
	<% } %>
</table>

<% } else if (type == 'modify') { %>
<% var num = 1; %>
<table id="modify_table" class="table table-bordered table-condensed" style="margin-bottom:0px">
	<tr>
		<th style="text-align:center" width="5%">No.</th>
		<th style="text-align:center" width="8%">년도/월</th>
		<th style="text-align:center" width="10%">수정횟수</th>
		<th style="text-align:center" width="62%">내용</th>
		<th style="text-align:center" width="15%">시간</th>
	</tr>
	<% for (i = data.length-1; i >= 0; i--) { %>
	<% if (data[i].modifyNumber == 0) { continue; } %>
	<tr>
		<td style="text-align:center"><%= num %></td>
		<td style="text-align:center"><%= data[i].year %>.<%= data[i].month %></td>
		<td style="text-align:center"><%= data[i].modifyNumber %>회 수정</td>
		<td style="text-align:center"><%= data[i].modifyMsg %></td>
		<td style="text-align:center"><%= data[i].modifyTime %></td>
	</tr>
	<% num += 1; %>
	<% } %>
</table>
<% } %>
